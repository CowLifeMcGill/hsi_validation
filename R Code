## Welfare outcome measures ####
# BCS
bcs.av <- aov(BCS ~ cluster + barn_type + year + season,
             data = wd3)

par(mfrow = c(2,2))
plot(bcs.av)
par(mfrow = c(1,1))


anova(bcs.av)



emmeans(bcs.av, ~ cluster)
wd3 %>% 
  group_by(cluster) %>% 
  summarize(sd = sd(BCS))

emmeans(bcs.av, ~ cluster) %>% 
        multcomp::cld(Letters = letters,
                      adjust = "bonferroni")



# Comparisons to include in the paper as supplementary material
